# =============================================================================
# AI Hiring & Assessment Platform - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
MONGODB_URI=mongodb://localhost:27017/hiring-platform
# Or MongoDB Atlas: mongodb+srv://user:pass@cluster.mongodb.net/hiring-platform

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=5002
NODE_ENV=development

# -----------------------------------------------------------------------------
# Frontend URL (for CORS and assessment links)
# -----------------------------------------------------------------------------
# Comma-separated for multiple origins
FRONTEND_URL=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# OpenAI Configuration (Required for JD parsing & evaluation)
# -----------------------------------------------------------------------------
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1
LLM_MODEL=gpt-4.1

# -----------------------------------------------------------------------------
# Judge0 Code Execution (Required for programming tests)
# -----------------------------------------------------------------------------
# Option 1: RapidAPI (Recommended for quick setup)
# Get your key from: https://rapidapi.com/judge0-official/api/judge0-ce
JUDGE0_API_KEY=your-rapidapi-key
JUDGE0_API_URL=https://judge0-ce.p.rapidapi.com

# Option 2: Self-hosted Judge0
# JUDGE0_API_URL=http://localhost:2358
# JUDGE0_API_KEY=

# -----------------------------------------------------------------------------
# Email Configuration (Optional in development)
# -----------------------------------------------------------------------------
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email sender
EMAIL_FROM=noreply@yourcompany.com

# Note: In development mode, emails are logged to console if SMTP is not configured

# -----------------------------------------------------------------------------
# Optional: File Storage (for resumes, photos)
# -----------------------------------------------------------------------------
# Cloudinary
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# AWS S3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1

# -----------------------------------------------------------------------------
# Optional: Plagiarism Detection
# -----------------------------------------------------------------------------
# Copyscape or similar
# PLAGIARISM_API_KEY=your-api-key
# PLAGIARISM_API_URL=https://api.copyscape.com

# -----------------------------------------------------------------------------
# Optional: Rate Limiting
# -----------------------------------------------------------------------------
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX=100
